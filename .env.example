# PostgreSQL Database Configuration (REQUIRED)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading
DB_USER=postgres
DB_PASSWORD=your_password_here

# Market Data Provider (OPTIONAL - Yahoo Finance works without keys!)
# Leave empty to use free Yahoo Finance data
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
FINNHUB_API_KEY=
IEX_CLOUD_API_KEY=

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Portfolio Configuration
INITIAL_CASH=100000
MAX_POSITION_SIZE=0.05
MAX_SECTOR_ALLOCATION=0.30
RISK_FREE_RATE=0.05

# Tax Configuration
TAX_YEAR=2024
FILING_STATUS=single
STATE_TAX_RATE=0.07

# Trading Configuration
MIN_OPTIONS_VOLUME=1000
MAX_BID_ASK_SPREAD=0.10
MIN_IMPLIED_VOLATILITY=20
MAX_IMPLIED_VOLATILITY=40
MIN_DAYS_TO_EXPIRATION=7
MAX_DAYS_TO_EXPIRATION=60
TARGET_ANNUAL_RETURN=15

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com

# Webhook Configuration (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Data Storage
DATA_DIRECTORY=./data
BACKUP_DIRECTORY=./backups
EXPORT_DIRECTORY=./exports